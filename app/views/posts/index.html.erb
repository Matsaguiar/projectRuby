<h1>Meus Posts</h1>
<div class="conteiner">

  <div>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Título</th>
          <th>Texto</th>
          <th colspan="2">
            Ações
            <%= link_to 'Novo Post', new_user_post_path(current_user), class: 'btn btn-success' %>
          </th>
        </tr>
      </thead>
      <tbody>
        <% if @posts.empty? %>
          <tr>
            <td colspan="4" class="text-center">
              <h3>Sem posts cadastrados.</h3>
              <%= link_to 'click aqui', new_user_post_path(current_user) %> para cadastrar um novo post
            </td>
          </tr>
        <% end %>
        <% @posts.each do |p| %>
        <tr>
          <td>
            <%= p.title %>
          </td>
          <td>
            <%= p.text %>
          </td>
          <td>
            <%= link_to 'Editar', edit_user_post_path(current_user, p), class: 'btn btn-warning' %>
          </td>
          <td>
            <%= button_to 'Excluir', user_post_path(current_user, p), method: :delete, class: 'btn btn-danger', data: { confirm: 'Tem certeza que deseja excluir?' } %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
